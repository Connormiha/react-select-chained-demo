{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "extends": "eslint:recommended",
    "rules": {
        "strict": 2,
        "comma-dangle": 1,
        "no-cond-assign": 2,
        "no-console": 0,
        "no-constant-condition": 1,
        "no-control-regex": 2,
        "no-debugger": 1,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty-character-class": 2,
        "no-empty": 1,
        "no-ex-assign": 1,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": 0,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": 1,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 0,
        "valid-typeof": 2,
        "no-unexpected-multiline": 1,

        "accessor-pairs": 1,
        "block-scoped-var": 2,
        "consistent-return": 1,
        "curly": 2,
        "default-case": 0,
        "dot-notation": 1,
        "dot-location": 0,
        "eqeqeq": 2,
        "guard-for-in": 0,
        "no-alert": 1,
        "no-caller": 2,
        "no-div-regex": 2,
        "no-else-return": 0,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-fallthrough": 0,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-iterator": 1,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 1,
        "no-multi-spaces": 2,
        "no-multi-str": 1,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 1,
        "no-new": 1,
        "no-octal": 2,
        "no-param-reassign": 0,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 1,
        "no-throw-literal": 2,
        "no-unused-expressions": 1,
        "no-void": 2,
        "no-with": 2,
        "radix": 2,
        "vars-on-top": 0,
        "wrap-iife": 1,
        "yoda": 1,

        "no-delete-var": 2,
        "no-shadow-restricted-names": 1,
        "no-shadow": 2,
        "no-undef": 1,
        "no-undefined": 0,
        "no-unused-vars": 1,
        "no-use-before-define": [2, "nofunc"],

        "array-bracket-spacing": [1, "never"],
        "brace-style": [1, "1tbs", {
            "allowSingleLine": false
        }],
        "camelcase": 1,
        "comma-spacing": [1, {
            "before": false,
            "after": true
        }],
        "comma-style": [1, "last"],
        "computed-property-spacing": [1, "never"],
        "consistent-this": 0,
        "eol-last": 2,
        "func-names": 0,
        "func-style": 0,
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "key-spacing": [2, {
            "beforeColon": false,
            "afterColon": true
        }],
        "lines-around-comment": 0,
        "linebreak-style": [2, "unix"],
        "max-nested-callbacks": [2, 3],
        "new-cap": 2,
        "new-parens": 2,
        "newline-after-var": 0,
        "no-continue": 0,
        "no-inline-comments": 0,
        "no-lonely-if": 1,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [1, {
            "max": 2
        }],
        "no-nested-ternary": 0,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 1,
        "no-underscore-dangle": 0,
        "no-unneeded-ternary": 2,
        "object-curly-spacing": [1, "never"],
        "one-var": 0,
        "operator-assignment": [2, "always"],
        "operator-linebreak": 0,
        "padded-blocks": [1, "never"],
        "quote-props": [1, "as-needed"],
        "quotes": [1, "single"],
        "semi-spacing": [2, {
            "before": false,
            "after": true
        }],
        "semi": 2,
        "sort-vars": 0,
        "keyword-spacing": 1,
        "space-before-blocks": [1, "always"],
        "space-before-function-paren": [1, "never"],
        "space-in-parens": [1, "never"],
        "space-infix-ops": 1,
        "spaced-comment": [1, "always"],
        "wrap-regex": 2,

        "no-this-before-super": 2,
        "no-var": 2,
        "object-shorthand": [2, "always"],
        "prefer-const": 0,

        "max-depth": [2, 4],
        "max-params": [2, 4],
        "no-bitwise": 2,

        "jsx-quotes": [1, "prefer-double"],
        "react/display-name": 0,
        "react/jsx-boolean-value": 1,
        "react/jsx-curly-spacing": [1, "never"],
        "react/jsx-no-undef": 1,
        "react/jsx-sort-prop-types": 0,
        "react/jsx-sort-props": 0,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/no-danger": 2,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-multi-comp": [1, {"ignoreStateless": true}],
        "react/no-unknown-property": 1,
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 1,
        "react/require-extension": 0,
        "react/self-closing-comp": 1,
        "react/sort-comp": [1, {
            "order": [
                "lifecycle",
                "everything-else",
                "/^handle.+$/",
                "/^render.+$/",
                "render"
            ],
            "groups": {
                lifecycle: [
                    "displayName",
                    "mixins",
                    "propTypes",
                    "contextTypes",
                    "statics",
                    "defaultProps",
                    "constructor",
                    "getDefaultProps",
                    "getInitialState",
                    "childContextTypes",
                    "getChildContext",
                    "state",
                    "componentWillMount",
                    "componentDidMount",
                    "componentWillReceiveProps",
                    "shouldComponentUpdate",
                    "componentWillUpdate",
                    "componentDidUpdate",
                    "componentWillUnmount"
                ]
            }
        }],
        "react/wrap-multilines": 1
    },
    "globals": {
        "React": false,
        "immutable": false,
        "DEBUG": false,
        "bem": false,
        "beforeEach": true,
        "afterEach": true,
        "describe": true,
        "it": true,
        "expect": true
    }
}
